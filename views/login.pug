extends layout

block content
  .main.container
    .row
      .col-md-10.col-md-offset-3
        h1.display-4.m-b-2.text-center Login

        // login form
        form(method='POST' action='/login')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit').text-center Login
